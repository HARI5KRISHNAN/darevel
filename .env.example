# Darevel Suite Environment Configuration

# ============================================================
# Docker Backend Services
# ============================================================

# Backend Ports (change if needed)
POSTGRES_PORT=5432
REDIS_PORT=6379
KEYCLOAK_PORT=8080

# Docker Images (you can adjust versions anytime)
POSTGRES_IMAGE=postgres:16
REDIS_IMAGE=redis:7
KEYCLOAK_IMAGE=quay.io/keycloak/keycloak:25.0.0

# Keycloak Admin Credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# ============================================================
# Application Configuration
# ============================================================

# Auth Service
NEXTAUTH_URL=http://localhost:3005
NEXTAUTH_SECRET=your-secret-key-here

# Storage/Drive Service
STORAGE_URL=http://localhost:3006

# Notification Service
NOTIFY_URL=http://localhost:3007

# JWT Configuration
JWT_SECRET=your-jwt-secret-here

# Database Connection
DATABASE_URL=postgresql://keycloak:keycloak@localhost:5432/keycloak

# Redis Connection
REDIS_URL=redis://localhost:6379

# ============================================================
# API Keys
# ============================================================

# OpenAI API Key (for AI features)
OPENAI_API_KEY=

# Gemini API Key (for Chat, Mail, Excel apps)
GEMINI_API_KEY=

# Ollama URL (for local AI)
OLLAMA_URL=http://localhost:11434
