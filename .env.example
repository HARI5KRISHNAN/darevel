# Darevel Suite - Environment Configuration
# Enterprise OSS Platform with Java 17+, Spring Boot 3, PostgreSQL, and Keycloak SSO

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=darevel

# Keycloak SSO Configuration
KEYCLOAK_HOSTNAME=localhost:8080
KEYCLOAK_PORT=8080
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_ISSUER=http://localhost:8080/realms/darevel

# Darevel Chat Backend
CHAT_SERVER_PORT=8081
CHAT_KEYCLOAK_CLIENT_ID=darevel-chat
CHAT_KEYCLOAK_CLIENT_SECRET=chat-secret

# Darevel Sheet Backend
SHEET_SERVER_PORT=8082
SHEET_KEYCLOAK_CLIENT_ID=darevel-sheet
SHEET_KEYCLOAK_CLIENT_SECRET=sheet-secret

# Darevel Mail Backend
MAIL_SERVER_PORT=8083
MAIL_KEYCLOAK_CLIENT_ID=darevel-mail
MAIL_KEYCLOAK_CLIENT_SECRET=mail-secret

# Darevel Slides Backend
SLIDES_SERVER_PORT=8084
SLIDES_KEYCLOAK_CLIENT_ID=darevel-slides
SLIDES_KEYCLOAK_CLIENT_SECRET=slides-secret

# Darevel Dashboard Backend (Main SSO Entry)
DASHBOARD_SERVER_PORT=8085
DASHBOARD_KEYCLOAK_CLIENT_ID=darevel-dashboard
DASHBOARD_KEYCLOAK_CLIENT_SECRET=dashboard-secret

# Java Configuration
JAVA_TOOL_OPTIONS=-Duser.timezone=UTC

# Frontend Ports (for CORS configuration)
CHAT_FRONTEND_PORT=3000
SHEET_FRONTEND_PORT=3001
MAIL_FRONTEND_PORT=3002
SLIDES_FRONTEND_PORT=3003
DASHBOARD_FRONTEND_PORT=3004
