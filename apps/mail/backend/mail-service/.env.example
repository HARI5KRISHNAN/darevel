# Production Environment Variables for Mail Service

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# Keycloak
KEYCLOAK_ISSUER_URI=https://auth.yourdomain.com/realms/darevel
KEYCLOAK_JWK_SET_URI=https://auth.yourdomain.com/realms/darevel/protocol/openid-connect/certs

# SMTP (Outgoing Mail)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password
SMTP_AUTH=true
SMTP_STARTTLS=true

# IMAP (Incoming Mail)
IMAP_HOST=localhost
IMAP_PORT=993
IMAP_SSL=true

# Mail Domain
MAIL_DOMAIN=yourdomain.com

# Jitsi (Video Calls)
JITSI_DOMAIN=meet.yourdomain.com
JITSI_PORT=443
JITSI_SECURE=true
JITSI_APP_ID=darevel
JITSI_SECRET=your_jitsi_secret
